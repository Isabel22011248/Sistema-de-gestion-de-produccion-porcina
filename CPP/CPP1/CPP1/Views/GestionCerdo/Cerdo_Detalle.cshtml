@model CPP1.Models.ViewModels.CerdoVM

@{
    ViewData["Title"] = "Cerdo_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oCerdo.Idcerdo == 0)
{

    <h1>Agregar Porcino</h1>
}
else
{
    <h1>Editar Porcino</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="Cerdo_Detalle" asp-controller="GestionCerdo" method="post">
            <input type="hidden" asp-for="oCerdo.Idcerdo" />


            <div class="mb-2">
                <label class="form-label" asp-for="oCerdo.Tamaño">Tamaño</label>
                <select class="form-select form-select-sm" asp-for="oCerdo.Tamaño">
                    <option value="Lechon">Lechon</option>
                    <option value="Crecimiento">Crecimiento</option>
                    <option value="Engorda">Engorda</option>
                </select>
            </div>


            <div class="mb-2">
                <label class="form-label" asp-for="oCerdo.FechaIngreso">Fecha de Ingreso</label>
                <input class="form-control form-control-sm" asp-for="oCerdo.FechaIngreso" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oCerdo.FechaSalida">Fecha de Salida</label>
                <input class="form-control form-control-sm" asp-for="oCerdo.FechaSalida" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>



            <div class="mb-2">

                @if (Model.oCerdo.Idcerdo == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="Cerdo" asp-controller="GestionCerdo">Volver</a>

            </div>

        </form>

    </div>
</div>

